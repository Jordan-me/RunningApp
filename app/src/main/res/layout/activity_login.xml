<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:alpha="0.4"
        android:scaleType="centerCrop"
        android:src="@drawable/img_runnablebackground" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/login_IMG_logo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        android:src="@drawable/img_runnablelogo"

        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/login_IMG_logo"
        android:layout_weight="1"
        android:padding="16dp"
        android:orientation="vertical"
        tools:ignore="MissingClass">


        <EditText
            android:id="@+id/login_ETXT_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textColor="#D8FFFFFF"
            android:textColorHint="#D8FFFFFF"
            android:inputType="phone"
            android:textStyle="bold"
            android:hint="Enter your phone number" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_BTN_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:padding="15dp"
            android:layout_gravity="center"
            android:text="Submit"
            android:backgroundTint="#A3000000"
            android:textColor="#ffffff"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>